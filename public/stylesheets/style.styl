html, body, div
  border: 0
  margin: 0
  padding: 0
  vertical-align: baseline

body
  padding-bottom: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  text-align: center
a
  color: #00B7FF
  text-decoration: none

.hidden
